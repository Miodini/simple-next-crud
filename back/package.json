{
  "name": "simple-nest-crud",
  "version": "0.0.1",
  "description": "Back-end for simple next crud project",
  "author": "Lucas Mondini",
  "private": true,
  "packageManager": "yarn@4.12.0",
  "scripts": {
    "build": "yarn prisma:migrate && nest build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "start": "yarn docker:up && nest start",
    "start:dev": "yarn docker:up && nest start --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "yarn test:docker:up && dotenv -e .env.test -- jest --config ./jest-e2e.config.ts",
    "test:prisma:migrate": "dotenv -e .env.test prisma migrate deploy",
    "test:docker:up": "docker-compose -f ./test/docker-compose.yml --env-file .env.test up -d ",
    "test:docker:down": "docker-compose -f ./test/docker-compose.yml --env-file .env.test down",
    "prisma:migrate": "dotenv prisma migrate deploy",
    "prisma:generate": "dotenv prisma generate --no-hints"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.1",
    "@nestjs/core": "^11.0.1",
    "@nestjs/platform-express": "^11.0.1",
    "@nestjs/swagger": "^11.2.0",
    "@prisma/adapter-mariadb": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "firebase-admin": "^13.5.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.18.0",
    "@jest/globals": "^30.2.0",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
    "@stylistic/eslint-plugin": "^5.4.0",
    "@types/express": "^5.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.7",
    "@types/supertest": "^6.0.2",
    "dotenv-cli": "^10.0.0",
    "eslint": "^9.18.0",
    "globals": "^16.0.0",
    "jest": "^30.0.0",
    "jest-mock-extended": "^4.0.0",
    "prisma": "^7.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.20.0"
  }
}
